{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "./",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "src/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src",
        "prisma",
        "src/types",
        "__tests__",
        "src/types"
    ]
}